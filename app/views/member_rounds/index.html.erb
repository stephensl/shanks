<h1>Member Rounds</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Round</th>
      <th>Total Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member_rounds.each do |member_round| %>
      <tr>
        <td><%= member_round.member.email %></td>
        <td><%= link_to "Round on #{member_round.round.date.strftime("%B %d, %Y")}", member_round.round %></td>
        <td><%= member_round.total_score %></td>
        <td><%= link_to 'Show', member_round %></td>
        <td><%= link_to 'Edit', edit_member_round_path(member_round) %></td>
        <td><%= link_to 'Destroy', member_round, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member Round', new_member_round_path %>

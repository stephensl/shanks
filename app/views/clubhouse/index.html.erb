<section class="section">
  <h1 class="title">Clubhouse</h1>

  <div class="box">
    <h2 class="subtitle">Upcoming Rounds</h2>
    <% if @upcoming_rounds.any? %>
      <div class="content">
        <ul>
          <% @upcoming_rounds.each do |round| %>
            <li>
              <strong>Date:</strong> <%= round.date.strftime("%B %d, %Y") %><br>
              <strong>Course:</strong> <%= round.course.name %>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <p>No upcoming rounds.</p>
    <% end %>
  </div>

  <div class="box">
    <h2 class="subtitle">Past Rounds</h2>
    <% if @past_rounds.any? %>
      <div class="content">
        <ul>
          <% @past_rounds.each do |round| %>
            <li>
              <strong>Date:</strong> <%= round.date.strftime("%B %d, %Y") %><br>
              <strong>Course:</strong> <%= round.course.name %><br>
              <strong>Score:</strong> <%= round.member_rounds.find_by(member: current_member)&.total_score %>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <p>No past rounds.</p>
    <% end %>
  </div>
</section>
